<?xml version="1.0" encoding="UTF-8"?>
<test_program>
    <themes>
        <theme id="1" name="Iconic Landmarks">
            <difficulty_level level="1" min_score="20" questions_per_session="5" time_limit="300">
                <questions>
                    <!-- Picture-Based Questions -->
                    <question id="1.1" points="10">
                        <text>Which country is this landmark located in?</text>
                        <image>.\img\sight_eiffel.png</image>
                        <answers>
                            <answer correct="false">Italy</answer>
                            <answer correct="true">France</answer>
                            <answer correct="false">Spain</answer>
                            <answer correct="false">Belgium</answer>
                        </answers>
                    </question>
                    
                    <question id="1.2" points="10">
                        <text>What is the name of this famous structure?</text>
                        <image>./img/sight_pyramids.png</image>
                        <answers>
                            <answer correct="true">Great Pyramids of Giza</answer>
                            <answer correct="false">Stonehenge</answer>
                            <answer correct="false">Machu Picchu</answer>
                            <answer correct="false">Petra</answer>
                        </answers>
                    </question>
                    
                    <!-- Country Identification -->
                    <question id="1.3" points="10">
                        <text>This skyline belongs to which country?</text>
                        <image>./img/city_newyork.png</image>
                        <answers>
                            <answer correct="false">Canada</answer>
                            <answer correct="true">United States</answer>
                            <answer correct="false">United Kingdom</answer>
                            <answer correct="false">Australia</answer>
                        </answers>
                    </question>
                </questions>
            </difficulty_level>
            
            <difficulty_level level="2" min_score="80" questions_per_session="7" time_limit="420">
                <questions>
                    <!-- Multiple Landmarks -->
                    <question id="2.1" points="15">
                        <text>Which country contains both these landmarks?</text>
                        <image>./img/sight_greatwall.png</image>
                        <answers>
                            <answer correct="false">Japan</answer>
                            <answer correct="true">China</answer>
                            <answer correct="false">India</answer>
                            <answer correct="false">Vietnam</answer>
                        </answers>
                    </question>
                    
                    <!-- Architecture Style -->
                    <question id="2.2" points="15">
                        <text>This architectural style is most common in which country?</text>
                        <image>./img/architecture_tajmahal.png</image>
                        <answers>
                            <answer correct="false">Turkey</answer>
                            <answer correct="false">Iran</answer>
                            <answer correct="true">India</answer>
                            <answer correct="false">Egypt</answer>
                        </answers>
                    </question>
                </questions>
            </difficulty_level>
            
            <difficulty_level level="3" min_score="80" questions_per_session="10" time_limit="600">
                <questions>
                    <!-- UNESCO Sites -->
                    <question id="3.1" points="20">
                        <text>This UNESCO World Heritage Site is located in which country?</text>
                        <image>./img/sight_angkorwat.png</image>
                        <answers>
                            <answer correct="false">Thailand</answer>
                            <answer correct="true">Cambodia</answer>
                            <answer correct="false">Myanmar</answer>
                            <answer correct="false">Laos</answer>
                        </answers>
                    </question>
                    
                    <!-- City Identification -->
                    <question id="3.2" points="20">
                        <text>This city skyline belongs to which country?</text>
                        <image>./img/city_dubai.png</image>
                        <answers>
                            <answer correct="false">Qatar</answer>
                            <answer correct="false">Saudi Arabia</answer>
                            <answer correct="true">United Arab Emirates</answer>
                            <answer correct="false">Kuwait</answer>
                        </answers>
                    </question>
                </questions>
            </difficulty_level>
        </theme>
        
        <theme id="2" name="Cultural Landscapes">
            <difficulty_level level="1" min_score="0" questions_per_session="5" time_limit="300">
                <questions>
                    <question id="1.1" points="10">
                        <text>This traditional landscape is typical of which country?</text>
                        <image>./img/landscape_tuscany.png</image>
                        <answers>
                            <answer correct="true">Italy</answer>
                            <answer correct="false">France</answer>
                            <answer correct="false">Spain</answer>
                            <answer correct="false">Greece</answer>
                        </answers>
                    </question>
                </questions>
            </difficulty_level>
        </theme>
    </themes>
</test_program>